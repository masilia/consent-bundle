{% extends '@ibexadesign/ui/layout.html.twig' %}

{% block title %}Policy {{ policy.version }}{% endblock %}

{% block content %}
<div class="ibexa-main-container">
    <div class="ibexa-content-container">
        <section class="container mt-4">
            <div class="ibexa-page-header">
                <h1 class="ibexa-page-title">
                    Policy Version {{ policy.version }}
                    {% if policy.isActive %}
                        <span class="badge bg-success ms-2">Active</span>
                    {% endif %}
                </h1>
                <div class="ibexa-page-header-actions">
                    <a href="{{ path('masilia_consent_admin_policy_list') }}" class="btn btn-secondary">
                        Back to List
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Policy Information</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Version:</dt>
                                <dd class="col-sm-8">{{ policy.version }}</dd>

                                <dt class="col-sm-4">Last Updated:</dt>
                                <dd class="col-sm-8">{{ policy.lastUpdated|date('Y-m-d H:i:s') }}</dd>

                                <dt class="col-sm-4">Cookie Prefix:</dt>
                                <dd class="col-sm-8"><code>{{ policy.cookiePrefix }}</code></dd>

                                <dt class="col-sm-4">Expiration:</dt>
                                <dd class="col-sm-8">{{ policy.expirationDays }} days</dd>

                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8">
                                    {% if policy.isActive %}
                                        <span class="badge bg-success">Active</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Inactive</span>
                                    {% endif %}
                                </dd>

                                <dt class="col-sm-4">Created:</dt>
                                <dd class="col-sm-8">{{ policy.createdAt|date('Y-m-d H:i:s') }}</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Statistics</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-6">Categories:</dt>
                                <dd class="col-sm-6">{{ policy.categories|length }}</dd>

                                <dt class="col-sm-6">Total Cookies:</dt>
                                <dd class="col-sm-6">
                                    {% set totalCookies = 0 %}
                                    {% for category in policy.categories %}
                                        {% set totalCookies = totalCookies + category.cookies|length %}
                                    {% endfor %}
                                    {{ totalCookies }}
                                </dd>

                                <dt class="col-sm-6">Third-Party Services:</dt>
                                <dd class="col-sm-6">{{ policy.thirdPartyServices|length }}</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Categories</h5>
                </div>
                <div class="card-body">
                    {% for category in policy.categories %}
                    <div class="mb-4 pb-3 border-bottom">
                        <h6>
                            {{ category.name }}
                            {% if category.required %}
                                <span class="badge bg-danger">Required</span>
                            {% endif %}
                            {% if category.defaultEnabled %}
                                <span class="badge bg-info">Default Enabled</span>
                            {% endif %}
                        </h6>
                        <p class="text-muted">{{ category.description }}</p>
                        
                        <h6 class="mt-3">Cookies ({{ category.cookies|length }})</h6>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Provider</th>
                                    <th>Expiry</th>
                                    <th>Script</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for cookie in category.cookies %}
                                <tr>
                                    <td><code>{{ cookie.name }}</code></td>
                                    <td>{{ cookie.provider }}</td>
                                    <td>{{ cookie.expiry }}</td>
                                    <td>
                                        {% if cookie.hasScript %}
                                            <span class="badge bg-warning">Yes</span>
                                        {% else %}
                                            <span class="text-muted">No</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% endfor %}
                </div>
            </div>

            {% if policy.thirdPartyServices|length > 0 %}
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">Third-Party Services</h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Config Key</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for service in policy.thirdPartyServices %}
                            <tr>
                                <td>{{ service.name }}</td>
                                <td><span class="badge bg-secondary">{{ service.category }}</span></td>
                                <td><code>{{ service.configKey }}</code></td>
                                <td>
                                    {% if service.enabled %}
                                        <span class="badge bg-success">Enabled</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Disabled</span>
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            {% endif %}
        </section>
    </div>
</div>
{% endblock %}
